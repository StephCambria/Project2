<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="./css/dist/output.css" rel="stylesheet" />
    <link href="./css/dist/style.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
 
  </head>
  <body class="m-0 p-0">
    <nav class="navbar">
      <ul class="links-container">
        <li class="link" id="home-link"><a href="/">Home</li>
        <li class="link" id="fridge-link">
          <a href="/fridge">Check the Fridge!</a>
        </li>
        <li class="link text-teal-500 ml-10 p-10" id="grocery-link">
          <a href="/grocery">Grocery List</a>
        </li>
        <li class="link" id="recipe-link">
          <a href="/dashboard">Cutting Board</a>
        </li>
        <!-- Conditionally render login or logout links -->
        {{#if loggedIn}}
        <li class="link" id="logout-link">Logout</li>
    {{else}}
        <li class="link" id="login-link"><a href="/login">Login</a></li>
        <li class="link" id="signup-link"><a href="/signup">Sign Up</a></li>
      {{/if}}
      </ul>
    </nav>
    <main class="container mx-auto">
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>
    <footer>
      
    </footer>
  </div>

  <!-- Render script for logged in users only -->
  {{#if loggedIn}}
  <script src="/js/logout.js"></script>
  {{/if}}
  </body>
</html>